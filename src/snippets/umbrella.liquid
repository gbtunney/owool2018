<div id="umbrella">
    <ul class="menu-umbrella">
        {%if settings.sm_facebook %}<li><a href="{{settings.sm_facebook_link}}" class="social-icon facebook" target="_blank">Facebook</a></li>{% endif %}
        {%if settings.sm_twitter %}<li><a href="{{settings.sm_twitter_link}}" class="social-icon twitter" target="_blank">Twitter</a></li>{% endif %}
        {%if settings.sm_ravelry %}<li><a href="{{settings.sm_ravelry_link}}" class="social-icon ravelry" target="_blank">Ravelry</a></li>{% endif %}
        {%if settings.sm_pinterest %}<li><a href="{{settings.sm_pinterest_link}}" class="social-icon pinterest" target="_blank">Pinterest</a></li>{% endif %}
        {%if settings.sm_instagram %}<li><a href="{{settings.sm_instagram_link}}" class="social-icon instagram" target="_blank">Instagram</a></li>{% endif %}
        {% if shop.customer_accounts_enabled %}
            <li class="customer-account-links">
                {% if customer %}
                    <p>{{ 'Log Out' | customer_logout_link }}</p>
                {% else %}
                    <p>{{ 'Log In' | customer_login_link }}</p>
                {% endif %}
            </li>
        {% endif %}


        {% if customer %}
            <li>
                <a href="/account">My Account</a>
            </li>
        {% endif %}

        <li class="cart-link">
            <a href="/cart" class="num-items-in-cart">
              <span class="icon">
               {{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}
              </span>
            </a>
        </li>
    </ul>
</div><!-- /#umbrella -->